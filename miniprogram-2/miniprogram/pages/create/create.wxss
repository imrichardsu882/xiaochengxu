page { background-color: #f0f2f5; }
.container { padding: 15px; padding-bottom: 90px; } /* 增加底部 padding */
.title { font-size: 34px; font-weight: bold; padding: 10px 5px 20px 5px; }
.form-section { background-color: #ffffff; border-radius: 12px; margin-bottom: 20px; }
.input-field { width: 100%; height: 50px; font-size: 17px; padding: 0 15px; box-sizing: border-box; }
.search-area { display: flex; align-items: center; padding: 5px 5px 5px 15px; }
.search-input { flex-grow: 1; padding: 0; }
.search-button { flex-shrink: 0; background-color: #007aff; color: white; font-size: 16px; height: 40px; line-height: 40px; border-radius: 8px; }
.result-preview { margin: 15px; padding: 15px; border-radius: 10px; background-color: #f7f7f7; }
.result-word { font-size: 20px; font-weight: bold; }
.result-phonetics { font-size: 14px; color: #666; margin-left: 10px; }
.result-meanings { margin-top: 10px; font-size: 16px; color: #333; }
.pos { font-weight: bold; color: #888; margin-right: 5px; }
.add-button { background-color: #2ecc71; color: white; margin-top: 15px; }
.list-title { font-size: 16px; color: #666; margin-bottom: 10px; padding-left: 5px; }
.word-list { display: flex; flex-direction: column; }
.word-item-wrapper { width: 100%; position: relative; overflow: hidden; }
.movable-area { height: 60px; width: 100%; }
.movable-view { height: 100%; width: 100%; background-color: #fff; }
.word-item-content { display: flex; align-items: center; padding: 0 15px; height: 100%; border-bottom: 1px solid #f0f2f5; }
.word-text { font-size: 17px; font-weight: 500; }
.phonetics-text { font-size: 14px; color: #8e8e93; margin-left: 10px; }
.delete-btn { position: absolute; top: 0; right: 0; width: 80px; height: 60px; background-color: #e74c3c; color: white; display: flex; align-items: center; justify-content: center; font-size: 16px; }
.publish-button-container { position: fixed; bottom: 0; left: 0; width: 100%; background-color: #f7f7f7; padding: 10px 15px 30px 15px; box-sizing: border-box; border-top: 1px solid #e0e0e0; }
.publish-button { background-color: #007aff; color: white; font-weight: bold; height: 50px; border-radius: 12px; display: flex; align-items: center; justify-content: center; }