/* pages/practice/practice.wxss */
.page-container {
  padding: 40rpx;
}
.page-title {
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 40rpx;
}
.homework-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease-in-out;
}
.homework-card:active {
  transform: scale(0.98);
}
.homework-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1c1c1e;
  margin-bottom: 16rpx;
}
.homework-meta {
  font-size: 28rpx;
  color: #8e8e93;
}
.meta-divider {
  margin: 0 12rpx;
}
.start-arrow {
  font-size: 40rpx;
  color: #c7c7cc;
}
.empty-state {
  text-align: center;
  margin-top: 200rpx;
  color: #8e8e93;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}
.empty-state text:first-child {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}