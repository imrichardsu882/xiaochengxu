/* pages/create/create.wxss */
page {
  background-color: #f2f2f7;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue',
    Helvetica, Arial, sans-serif;
}
.page-container {
  padding: 32rpx;
  padding-bottom: 200rpx;
}
.card-module {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}
.module-title-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.module-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1c1c1e;
  flex-shrink: 0;
}
.list-hint {
  font-size: 24rpx;
  color: #c7c7cc;
  font-weight: normal;
  margin-left: 16rpx;
  flex-grow: 1;
}
.word-count {
  font-size: 28rpx;
  color: #8e8e93;
  font-weight: 500;
  flex-shrink: 0;
}
.placeholder-style {
  color: #c7c7cc;
  font-size: 30rpx;
  line-height: 1.5;
}
.title-input {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  color: #1c1c1e;
  border-bottom: 2rpx solid #e5e5ea;
}
.batch-input {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e5e5ea;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 1.6;
  min-height: 200rpx;
  margin-top: 16rpx;
}
.parse-button {
  background-color: #007aff;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  height: 90rpx;
  margin-top: 24rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.button-hover { background-color: #0056b3; }
.button-hover-green { opacity: 0.8; }
.word-list-container { max-height: 600rpx; }
.word-item {
  display: flex;
  position: relative;
  transition: all 0.3s ease-in-out;
}
.word-item-content {
  width: 100%;
  padding: 32rpx 0;
  background-color: #ffffff;
  position: relative;
  z-index: 2;
  border-bottom: 2rpx solid #f2f2f7;
}
.word-item:last-child .word-item-content { border-bottom: none; }
.word-info {
  display: flex;
  align-items: baseline;
}
.word-text { font-size: 34rpx; font-weight: 500; }
.phonetics-text { font-size: 28rpx; color: #8e8e93; margin-left: 16rpx; }
.delete-btn {
  background-color: #ff3b30;
  width: 180rpx;
  position: absolute;
  top: 0;
  right: -180rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  z-index: 1;
}
.empty-list { text-align: center; padding: 80rpx 0; color: #8e8e93; }
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}
.publish-button {
  background-color: #34c759;
  color: #ffffff;
  width: 100%;
  height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}